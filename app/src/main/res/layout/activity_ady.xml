<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="5dp"
    android:paddingTop="70dp"
    android:orientation="vertical"
    tools:context=".ady">


    <FrameLayout
        android:id="@+id/frameLayout2"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:gravity="center">

        <com.example.plac.Buttun
            android:id="@+id/btn_find"
            android:layout_width="168dp"
            android:layout_height="63dp"
            android:layout_marginLeft="220dp"
            android:layout_marginTop="130dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="190dp"
            android:background="@drawable/bg_prime1"
            android:text="پیدا کردن"
            android:textColor="#630000"
            android:textSize="25dp"
            android:textStyle="bold" />


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="380dp"
            android:layout_height="104dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="0dp"
            android:gravity="center"
            android:src="@drawable/_0962157_1024x220" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/edt_txt2"
            android:layout_width="wrap_content"
            android:layout_height="96dp"
            android:layout_marginLeft="115dp"
            android:layout_marginTop="-2dp"
            android:background="#00111111"
            android:gravity="center"
            android:hint="ن"
            android:textColor="#111"
            android:textColorHint="#52F31111"
            android:textSize="52dp" />

        <TextView
            android:id="@+id/edt_txt2"
            android:layout_width="56dp"
            android:layout_height="55dp"
            android:layout_marginLeft="135dp"
            android:layout_marginTop="20dp"
            android:background="@color/white" />

        <TextView
            android:id="@+id/edt_txt2"
            android:layout_width="62dp"
            android:layout_height="58dp"
            android:layout_marginLeft="323dp"
            android:layout_marginTop="30dp"
            android:background="@color/white" />

        <EditText
            android:id="@+id/edt_txt4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="153dp"
            android:layout_marginBottom="53dp"
            android:hint="67"
            android:inputType="phone"
            android:maxLength="2"
            android:padding="0dp"
            android:textAlignment="center"
            android:textColor="#111"
            android:textColorHint="#52F31111"
            android:textSize="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.913"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.048" />

    </FrameLayout>


    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal">

    <LinearLayout
        android:layout_width="351dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp"
        android:orientation="vertical">

        <com.example.plac.Textveiev
            android:id="@+id/txt_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="3dp"
            android:background="@drawable/button"
            android:gravity="center"
            android:padding="0dp"
            android:textColor="#111"
            android:textSize="20dp"
            android:textStyle="bold" />
        <com.example.plac.Textveiev
            android:id="@+id/txt_secend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="3dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/button"
            android:gravity="center"
            android:padding="0dp"
            android:textColor="#111"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/guideline9"
            app:layout_constraintHorizontal_bias="0.924"
            app:layout_constraintStart_toStartOf="@+id/guideline8"
            app:layout_constraintTop_toBottomOf="@+id/txt_view"
            app:layout_constraintVertical_bias="0.0" />
        <com.example.plac.Textveiev
            android:id="@+id/txt_serd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="3dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/button"
            android:gravity="center"
            android:padding="0dp"
            android:textColor="#111"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/guideline9"
            app:layout_constraintHorizontal_bias="0.924"
            app:layout_constraintStart_toStartOf="@+id/guideline8"
            app:layout_constraintTop_toBottomOf="@+id/txt_secend"
            app:layout_constraintVertical_bias="0.0" />
        <com.example.plac.Textveiev
            android:id="@+id/txt_fore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="3dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/button"
            android:gravity="center"
            android:padding="0dp"
            android:textColor="#111"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/guideline9"
            app:layout_constraintHorizontal_bias="0.924"
            app:layout_constraintStart_toStartOf="@+id/guideline8"
            app:layout_constraintTop_toBottomOf="@+id/txt_serd"
            app:layout_constraintVertical_bias="0.0" />
        <com.example.plac.Textveiev
            android:id="@+id/txt_secend1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="3dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/button"
            android:gravity="center"
            android:padding="0dp"
            android:textColor="#111"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/guideline9"
            app:layout_constraintHorizontal_bias="0.924"
            app:layout_constraintStart_toStartOf="@+id/guideline8"
            app:layout_constraintTop_toBottomOf="@+id/txt_fore"
            app:layout_constraintVertical_bias="0.0" />
        <com.example.plac.Textveiev
            android:id="@+id/txt_serd1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="3dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/button"
            android:gravity="center_horizontal"
            android:padding="0dp"
            android:textColor="#111"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/guideline9"
            app:layout_constraintHorizontal_bias="0.924"
            app:layout_constraintStart_toStartOf="@+id/guideline8"
            app:layout_constraintTop_toBottomOf="@+id/txt_secend1"
            app:layout_constraintVertical_bias="0.0" />
        <com.example.plac.Textveiev
            android:id="@+id/txt_fore1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="3dp"
            android:background="@drawable/button"
            android:gravity="center"
            android:padding="0dp"
            android:textColor="#111"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/guideline9"
            app:layout_constraintHorizontal_bias="0.924"
            app:layout_constraintStart_toStartOf="@+id/guideline8"
            app:layout_constraintTop_toBottomOf="@+id/txt_serd1"
            app:layout_constraintVertical_bias="0.0" />

    </LinearLayout>
</ScrollView>

</androidx.appcompat.widget.LinearLayoutCompat>